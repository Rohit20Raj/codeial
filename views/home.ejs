<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
</head>

<body>
    
    <section id="feed-posts">
        <h1>
            CODEIAL | <%= title %>
        </h1>
        <h4>Posts</h4>
        <% if (locals.user) { %>
            <form action="/posts/create" id="new-post-form" method="post">
                <textarea name="content" cols="50" rows="1" placeholder="Enter your thoughts..."></textarea>
                <input type="submit" value="Post">
            </form>
        <% } %>

        <div id="posts-list-container">
            <ul id="posts-list">
                <% for(post of posts){ %>
                    <li>
                        <%= post.content %>
                            <small>
                                <u>
                                    ~<%= post.user.name %>
                                </u>
                            </small>
                    </li>
                    <%} %>
            </ul>
        </div>
    </section>
</body>

</html>